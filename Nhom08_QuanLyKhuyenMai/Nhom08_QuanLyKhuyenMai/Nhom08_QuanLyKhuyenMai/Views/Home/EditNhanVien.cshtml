@using Nhom08_QuanLyKhuyenMai.Models;
@{
    NhanVienTaiKhoanViewModel lst = ViewBag.tt;
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Sửa Nhân Viên</h2>
            <form method="post" action="EditNhanVien" class="mt-3">
                
                <div class="form-group">
                    <label for="MaNV">Mã Nhân Viên</label>
                    <input type="text" id="MaNV" name="MaNV" value="@lst.NhanVien.maNV" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="TenNV">Tên Nhân Viên</label>
                    <input type="text" id="TenNV" name="TenNV" value="@lst.NhanVien.tenNV" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="NgaySinh">Ngày Sinh</label>
                    <input type="date" id="NgaySinh" name="NgaySinh" value="@lst.NhanVien.ngaySinh.ToString("yyyy-MM-dd")" class="form-control">
                </div>
                <div class="form-group">
                    <label for="DiaChi">Địa Chỉ</label>
                    <input type="text" id="DiaChi" name="DiaChi" value="@lst.NhanVien.diaChi" class="form-control">
                </div>
                <div class="form-group">
                    <label for="SoDienThoai">Số Điện Thoại</label>
                    <input type="text" id="SoDienThoai" name="SoDienThoai" value="@lst.NhanVien.soDienThoai" class="form-control">
                </div>
                <div class="form-group">
                    <label for="NgayVaoLam">Ngày Vào Làm</label>
                    <input type="date" id="NgayVaoLam" name="NgayVaoLam" value="@lst.NhanVien.ngayVaoLam.ToString("yyyy-MM-dd")" class="form-control">
                </div>
                <div class="form-group">
                    <label for="TenTaiKhoan">Tên Tài Khoản</label>
                    <input type="text" id="TenTaiKhoan" name="TenTaiKhoan" value="@lst.TaiKhoan.tenTaiKhoan" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="MatKhau">Mật Khẩu</label>
                    <input type="password" id="MatKhau" name="MatKhau" value="@lst.TaiKhoan.matKhau" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="Quyen">Quyền</label>
                    <select id="Quyen" name="Quyen" class="form-control" required>
                        <option value="user">User</option>
                        <option value="admin">Admin</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Trạng Thái</label>
                    <div class="form-check">
                        <input type="radio" id="TrangThai1" name="TrangThai" value="true" class="form-check-input" checked>
                        <label for="TrangThai1" class="form-check-label">Kích hoạt</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" id="TrangThai2" name="TrangThai" value="false" class="form-check-input">
                        <label for="TrangThai2" class="form-check-label">Khóa</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </form>
        </div>
    </div>
</div>
