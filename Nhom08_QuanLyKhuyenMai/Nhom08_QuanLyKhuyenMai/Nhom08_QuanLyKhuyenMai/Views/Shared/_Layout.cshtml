<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
</head>
<body>
    <div class="row" style="z-index:1000">
        <div class="col-md-2 position-fixed" style="height: 100vh; background-color: #117fdb; padding: 0">
            <div class="content-card">
                <img src="~/Images/logo-huit-xanh.png" width="200" />
            </div>
            <ul class="ul-list max-width">
                <li class="li-item">
                    <a href="/Home/QLKhuyenMai">
                        KHUYỄN MÃI
                    </a>
                </li>
                <li class="li-item">
                    <a href="/Home/QLSanPham">
                        SẢN PHẨM
                    </a>
                </li>
                @{ if (Session["Auth"] != null)
                    {
                        if (Session["Auth"].Equals("admin"))
                        {
                            <li class="li-item">
                                <a href="/Home/NhanVienDetails">
                                    QUẢN LÝ NHÂN VIÊN
                                </a>
                            </li>
                        }
                    }
                }

                @*<li class="li-item">
                    <a href="#">
                        THỐNG KÊ
                    </a>
                </li>
                <li class="li-item">
                    <a href="#">
                        SAO LƯU
                    </a>
                </li>
                <li class="li-item">
                    <a href="#">
                        KHÔI PHỤC
                    </a>
                </li>*@
                <li class="li-item">
                    <a href="/Home/About">
                        VỀ CHÚNG TÔI
                    </a>
                </li>
            </ul>

        </div>
        <div class="col-md-2 "></div>
        <div class="col-md-10 body-content">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark position-fixed max-width"
                 style="z-index:150; margin:-1.3%">
                <!--    LOGIN    -->
                <div class="col-md-7"></div>
                <div class="col-md-5"><img src="~/Images/skills.png" width="50" style="background-color:aliceblue; border-radius:50%"/>
                                      <label class="text-white"><ul class="navbar-nav ml-auto">
    @{
        if (Session["Username"] != null)
        {
            <li class="nav-item">
                <a class="nav-link" href="#">Chào @Session["Username"]</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/Logout">Đăng xuất</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link" href="/Home/Login">Đăng nhập</a>
            </li>
        }
    }
</ul></label>
                                      
                </div>
            </nav>
            <div class="row" style="z-index:100; margin-top:4.2%">
                @RenderBody()
            </div>
            


            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>

   

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
